<script>
    $(document).ready(function () {
        $("#calculateTotal").on("click", function () {
            $("#hoursError").text("");

            var hours = parseFloat($("#hours").val());

            if (isNaN(hours) || hours <= 0) {
                $("#hoursError").text("Please enter a valid positive number.");
                return;
            }

            var hourlyCharge = parseFloat($("#hourlyCharge").val().replace('$', '')); 
            var totalCharge = hours * hourlyCharge;

            $("#totalCharge").val("$" + totalCharge.toFixed(2));
        });
    });
</script>

